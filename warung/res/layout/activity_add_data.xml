<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="16dp">

  <EditText
    android:id="@+id/id_produk"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Id_Produk"/>

  <EditText
    android:id="@+id/nama"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Nama"/>

  <EditText
    android:id="@+id/jenis"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Jenis"/>

  <EditText
    android:id="@+id/harga"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Harga"/>

  <EditText
    android:id="@+id/persediaan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Persediaan"/>
  
  <Button 
      android:id="@+id/submit_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Submit"/>

</LinearLayout>